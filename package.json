{
  "name": "forge-sql-orm",
  "version": "2.1.11",
  "description": "Drizzle ORM integration for Atlassian @forge/sql. Provides a custom driver, schema migration, two levels of caching (local and global via @forge/kvs), optimistic locking, and query analysis.",
  "main": "dist/ForgeSQLORM.js",
  "module": "dist/ForgeSQLORM.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/ForgeSQLORM.js",
    "import": "./dist/ForgeSQLORM.mjs",
    "default": "./dist/ForgeSQLORM.mjs"
  },
  "homepage": "https://github.com/vzakharchenko/forge-sql-orm#readme",
  "bugs": {
    "url": "https://github.com/vzakharchenko/forge-sql-orm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vzakharchenko/forge-sql-orm.git"
  },
  "keywords": [
    "atlassian-forge",
    "atlassian-forge-drizzle",
    "forge-sql",
    "forge",
    "drizzle",
    "drizzle-orm",
    "drizzle-driver",
    "drizzle-custom-driver",
    "orm",
    "database"
  ],
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vitest": "^0.5.4",
    "knip": "^5.66.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  },
  "license": "MIT",
  "author": "Vasyl Zakharchenko",
  "scripts": {
    "test": "vitest --run --config vitest.config.mjs",
    "test:coverage": "vitest --run --config vitest.config.mjs --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src  --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src examples __tests__",
    "format:check": "prettier --write src examples __tests__ --check",
    "clean": "rm -rf dist",
    "build": "npm run clean && vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "generate:models": "ts-node scripts/generate-models.ts",
    "knip": "knip"
  },
  "files": [
    "dist",
    "tsconfig.json",
    "src",
    "README.md"
  ],
  "peerDependencies": {
    "@forge/sql": "^3.0.9",
    "drizzle-orm": "^0.44.7"
  },
  "optionalDependencies": {
    "@forge/kvs": "^1.0.8"
  },
  "dependencies": {
    "luxon": "^3.7.2"
  }
}
