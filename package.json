{
  "name": "forge-sql-orm",
  "version": "1.0.24",
  "description": "Mikro-ORM integration for Forge-SQL in Atlassian Forge applications.",
  "main": "dist/ForgeSQLORM.js",
  "module": "dist/ForgeSQLORM.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/ForgeSQLORM.js",
    "import": "./dist/ForgeSQLORM.mjs",
    "default": "./dist/ForgeSQLORM.mjs"
  },
  "homepage": "https://github.com/vzakharchenko/forge-sql-orm#readme",
  "bugs": {
    "url": "https://github.com/vzakharchenko/forge-sql-orm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vzakharchenko/forge-sql-orm.git"
  },
  "keywords": [
    "atlassian-forge",
    "forge-sql",
    "forge",
    "mikro-orm",
    "orm",
    "database"
  ],
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@mikro-orm/cli": "^6.4.9",
    "@mikro-orm/entity-generator": "^6.4.9",
    "@mikro-orm/reflection": "^6.4.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitest/coverage-v8": "^3.0.8",
    "@vitest/ui": "^3.0.8",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.0.0",
    "inquirer": "^12.4.3",
    "mysql": "^2.18.1",
    "mysql2": "^3.13.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.1",
    "vite-plugin-static-copy": "^2.3.0",
    "vitest": "^3.0.8"
  },
  "license": "MIT",
  "author": "Vasyl Zakharchenko",
  "scripts": {
    "test": "vitest --run --config vitest.config.mjs",
    "test:coverage": "vitest --run --config vitest.config.mjs --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src examples/forge-sql-orm-example/src examples/forge-sql-orm-example-simple/src  --ext .ts,.tsx,.mjs",
    "lint:fix": "eslint src --ext .ts,.tsx,.mjs --fix",
    "format": "prettier --write .",
    "clean": "rm -rf dist",
    "build": "npm run clean && vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "build:cli": "vite build --mode cli",
    "dependency:fix": "node ./dist-cli/forgeSqlCLI.js patch:mikroorm",
    "prepublish:npm": "npm run build:cli && npm run build",
    "publish:npm": "npm publish --access public"
  },
  "files": [
    "dist",
    "dist-cli",
    "src",
    "node_modules",
    "tsconfig.json",
    "README.md"
  ],
  "dependencies": {
    "@forge/resolver": "^1.6.7",
    "@mikro-orm/core": "6.4.9",
    "@mikro-orm/mysql": "6.4.9",
    "moment": "^2.30.1"
  },
  "peerDependencies": {
    "@forge/sql": "^2.4.0"
  },
  "bin": {
    "forge-sql-orm": "dist-cli/forgeSqlCLI.js"
  }
}
